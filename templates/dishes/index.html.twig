{% extends 'base.html.twig' %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h3> {{message}}</h3>
    </div>
{% endfor %}
<br>
<div class="container">
<h2> All dishes </h2>
<br>
<table class="table table-striped">
    <thead>
    <tr>
        <td> Order Number </td>
        <td> Name </td>
        <td> Description </td>
        <td> Category </td>
        <td> Price </td>
        <td> Delete </td>
        <td><a href="{{ path('dishes.create')}}">Create</a> </td>
        </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
        <tr>
            <td>{{dish.id}}</td>
            <td><a href="{{path('dishes.show',{id: dish.id})}}">{{dish.name}}</a></td>
            {# <td>{{dish.name}}</td> #}
            <td>{{dish.description}}</td>
            <td>{{dish.category}}</td>
            <td>{{dish.price}}</td>
            <td><a href="{{ path('dishes.delete', {id: dish.id})}}">x</a> </td>
            {# <td>{{dish.name}}</td>
            <td>{{dish.description}}</td> #}
        </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}

