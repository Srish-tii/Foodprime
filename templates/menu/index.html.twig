{% extends 'base.html.twig' %}

{% block body %}

<section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Menucart</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="control" data-filter=".Drink">Drink</li>
					<li class="control" data-filter=".Starter">Starter</li>
					<li class="control" data-filter=".Main dish">Main dish</li>
					<li class="control" data-filter=".Dessert">Dessert</li>
					<li class="control" data-filter="all">All Dishes</li>
				</ul>
			</div>
			<div class="clearfix"></div>
			<div class="row playlist-area">
				{% for dish in dishes %}
					<div class="mix col-lg-3 col-md-4 col-sm-6 {{dish.category}}">
						<div class="playlist-item">
							<img src="{{asset('images_here/' ~ dish.image)}}">
							<h5>{{dish.description}}
								- EUR
								{{dish.price}}</h5>
							<p>BestNr.
								{{dish.id}}
								{# <a class="btn btn-outline-danger btn-sm" href={{ path('bestellen',{id: gericht.id} )}} role="button">Bestellen</a> #}
							</p>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</section>

{% endblock %}
